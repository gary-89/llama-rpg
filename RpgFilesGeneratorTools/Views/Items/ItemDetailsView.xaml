<UserControl
    x:Class="RpgFilesGeneratorTools.Views.Items.ItemDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RpgFilesGeneratorTools.Toolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:RpgFilesGeneratorTools.Pages.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:primaryTypes="using:LlamaRpg.Models.Items.PrimaryTypes"
    xmlns:viewModels="using:RpgFilesGeneratorTools.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:ItemsPageViewModel}">
    <UserControl.Resources>
        <DataTemplate
            x:Key="WeaponDetailsTemplate"
            x:DataType="primaryTypes:Weapon">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        Text="{x:Bind Name, FallbackValue=''}"
                        FontSize="16"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Type:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <StackPanel
                        Grid.Column="1"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,10,0,0">
                        <TextBlock Text="{x:Bind Type, FallbackValue=''}" />
                        <TextBlock Text=" (" />
                        <TextBlock Text="{x:Bind Subtype, FallbackValue=''}" />
                        <TextBlock Text=")" />
                    </StackPanel>

                    <!-- Speed -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Speed:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{x:Bind Speed, FallbackValue=''}"
                        Margin="10,10,0,0" />

                    <!-- Requirement -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Required strength (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="3"
                        Text="{x:Bind RequiredStrength, FallbackValue=''}"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Required dexterity (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="4"
                        Text="{x:Bind RequiredDexterity, FallbackValue=''}"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="5"
                        Text="Required intelligence (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="5"
                        Text="{x:Bind RequiredIntelligence, FallbackValue=''}"
                        Margin="10,10,0,0" />

                    <!-- Damage -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="6"
                        Text="Damage:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="6"
                        Margin="10,10,0,0">
                        <Run Text="{x:Bind MinDamage, FallbackValue=''}" />
                        <Run Text="to" />
                        <Run Text="{x:Bind MaxDamage, FallbackValue=''}" />
                    </TextBlock>

                    <!-- Sockets -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="7"
                        Text="Sockets max:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="7"
                        Margin="10,10,0,0">
                        <Run Text="{x:Bind Sockets, FallbackValue=''}" />
                    </TextBlock>

                    <!-- Item statuses -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="8"
                        Text="Status(es):"
                        Style="{StaticResource LabelStyle}"
                        VerticalAlignment="Top"
                        Margin="0,10,0,0" />

                    <Grid
                        Grid.Column="1"
                        Grid.Row="8"
                        Margin="10,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="0"
                            VerticalAlignment="Center">
                            <Run Text="{x:Bind Status, FallbackValue=''}" />
                        </TextBlock>

                        <StackPanel
                            Grid.Column="1"
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <TextBlock
                                Text=": "
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="{x:Bind StatusChance, FallbackValue=''}"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="%"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                        </StackPanel>

                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="2"
                            VerticalAlignment="Center">
                            <Run Text="{x:Bind Status2, FallbackValue=''}" />
                        </TextBlock>

                        <StackPanel
                            Grid.Column="1"
                            Grid.Row="2"
                            Orientation="Horizontal">
                            <TextBlock
                                Text=": "
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="{x:Bind Status2Chance, FallbackValue=''}"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="%"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>

