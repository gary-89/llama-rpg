    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:RpgFilesGeneratorTools.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:ItemsPageViewModel}">
    <UserControl.Resources>
        <DataTemplate
            x:Key="WeaponDetailsTemplate"
            x:DataType="itemTypes:Weapon">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        Text="{x:Bind Name, FallbackValue='', Mode=OneWay}"
                        FontSize="16"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Type:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <StackPanel
                        Grid.Column="1"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,10,0,0">
                        <TextBlock Text="{x:Bind Type, FallbackValue='', Mode=OneWay}" />
                        <TextBlock Text=" (" />
                        <TextBlock Text="{x:Bind Subtype, FallbackValue='', Mode=OneWay}" />
                        <TextBlock Text=")" />
                    </StackPanel>

                    <!-- Speed -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Speed:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{x:Bind Speed, FallbackValue='', Mode=OneWay}"
                        Margin="10,10,0,0" />

                    <!-- Requirement -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Required strength (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="3"
                        Text="{x:Bind RequiredStrength, FallbackValue='', Mode=OneWay}"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Required dexterity (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="4"
                        Text="{x:Bind RequiredDexterity, FallbackValue='', Mode=OneWay}"
                        Margin="10,10,0,0" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="5"
                        Text="Required intelligence (plvl * ):"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="5"
                        Text="{x:Bind RequiredIntelligence, FallbackValue='', Mode=OneWay}"
                        Margin="10,10,0,0" />

                    <!-- Damage -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="6"
                        Text="Damage:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="6"
                        Margin="10,10,0,0">
                        <Run Text="{x:Bind MinDamage, FallbackValue='', Mode=OneWay}" />
                        <Run Text="to" />
                        <Run Text="{x:Bind MaxDamage, FallbackValue='', Mode=OneWay}" />
                    </TextBlock>

                    <!-- Sockets -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="7"
                        Text="Sockets max:"
                        Style="{StaticResource LabelStyle}"
                        Margin="0,10,0,0" />

                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="7"
                        Margin="10,10,0,0">
                        <Run Text="{x:Bind Sockets, FallbackValue='', Mode=OneWay}" />
                    </TextBlock>

                    <!-- Item statuses -->
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="8"
                        Text="Status(es):"
                        Style="{StaticResource LabelStyle}"
                        VerticalAlignment="Top"
                        Margin="0,10,0,0" />

                    <Grid
                        Grid.Column="1"
                        Grid.Row="8"
                        Margin="10,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="0"
                            VerticalAlignment="Center">
                            <Run Text="{x:Bind Status, FallbackValue='', Mode=OneWay}" />
                        </TextBlock>

                        <StackPanel
                            Grid.Column="1"
                            Grid.Row="0"
                            Orientation="Horizontal">
                            <TextBlock
                                Text=": "
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="{x:Bind StatusChance, FallbackValue='', Mode=OneWay}"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="%"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                        </StackPanel>

                        <TextBlock
                            Grid.Column="0"
                            Grid.Row="2"
                            VerticalAlignment="Center">
                            <Run Text="{x:Bind Status2, FallbackValue='', Mode=OneWay}" />
                        </TextBlock>

                        <StackPanel
                            Grid.Column="1"
                            Grid.Row="2"
                            Orientation="Horizontal">
                            <TextBlock
                                Text=": "
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="{x:Bind Status2Chance, FallbackValue='', Mode=OneWay}"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                            <TextBlock
                                Text="%"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>

