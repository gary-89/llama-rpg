<UserControl
    x:Class="RpgFilesGeneratorTools.Pages.ItemDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:RpgFilesGeneratorTools.Toolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:itemTypes="using:RpgFilesGeneratorTools.Models.ItemTypes"
