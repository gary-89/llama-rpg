<Page
    x:Class="RpgFilesGeneratorTools.Pages.AffixesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:RpgFilesGeneratorTools.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:RpgFilesGeneratorTools.Toolkit"
    xmlns:viewModels="using:RpgFilesGeneratorTools.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:AffixesPageViewModel}"
    toolkit:ViewModelLocator.AutoHookedUpViewModel="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">
            <Run Text="Affixes page" />
            <Run Text="{x:Bind ViewModel.Number}" />
        </TextBlock>

        <AutoSuggestBox
            Grid.Row="1"
            PlaceholderText="Search affix..."
            QueryIcon="Find"
            Text="{x:Bind ViewModel.Filter, Mode=TwoWay}" />
    </Grid>
</Page>
