<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RpgFilesGeneratorTools.Styles">
    <Style
        x:Key="TitleTextBlockStyle"
        TargetType="TextBlock">
        <Setter Value="24" Property="FontSize" />
    </Style>

    <Style
        x:Key="LabelStyle"
        TargetType="TextBlock">
        <Setter Value="Gray" Property="Foreground" />
        <Setter Value="Right" Property="HorizontalAlignment" />
        <Setter Value="Center" Property="VerticalAlignment" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Value="150" Property="MinWidth" />
    </Style>
</ResourceDictionary>
